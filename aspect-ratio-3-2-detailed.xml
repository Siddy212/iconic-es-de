<theme>

   <!--
   ///
   All Views: Defaults
   ///
   -->
   <view name="system,gamelist">
      <helpsystem name="help">
         <posDimmed>0.5 0.965</posDimmed>
         <originDimmed>0.5 1</originDimmed>
         <fontSize>0.018</fontSize>
         <entrySpacing>0.0042</entrySpacing>
